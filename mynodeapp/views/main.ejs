<!DOCTYPE html>
<html lang="en">

<head>
  <% include head %>
  <style>
    body{
      background-image: url("jj.jpg");
      color:white;
    }
    #mypanelId{
    background-image: none;
    background: #C68E17;
    color: white;
     }
  </style>
</head>

<body>
  <div class="container-fluid bg-3 text-center">
    <section>
      <% include searchbar %>
    </section>
    <% value.forEach( ploop => { %>
    <div class="container">
      <div class="">
          <div class="col-md-12">
              <div class="panel panel-default" id="mypanelId">
                <div class="panel-heading post-thumb">
                    <h3 class="post-title">
                        <div>
                          <%= ploop.judul.value %>
                        </div>
                    </h3>
                </div>
                <div class="panel-body post-body">
                    
                    <div class="post-author">
                        <div>
                          <%= ploop.genre.value %>
                        </div>
                    </div>
                    <div class="post-author">
                        <div>
                          <%= ploop.tahun.value %>
                        </div>
                    </div>
                    <div class="post-author">
                        <div>
                          <%= ploop.rating.value %>
                        </div>
                    </div>
                    <div class="post-author">
                        <div>
                          <%= ploop.sinopsis.value %>
                        </div>
                    </div>
                </div>
              </div>
          </div>
        </div>
    </div>
    <% })
    %>
    <br />
  </div>
  <center style="background-color:black;">
    <% include footer %>
  </center>
</body>

</html>